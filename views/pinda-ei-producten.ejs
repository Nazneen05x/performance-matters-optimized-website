<%- include('./Partials/head') %>

<main>

    <% producten.producten.forEach(product => { %>

        <picture>
            <img class="pindaproducten" src=" <%= product.plaatjes[0].url %>" alt="pindaofeiproducten">
        </picture>
       
        <h2 class="titelproducten">
            <%= product.titel%>
        </h2>

        <p class="prijs">
          <span>&euro;</span>  <%= product.prijs%>
        </p>

        <a class="button-producten" href="#"><img src="/chevron-right.svg" alt="iconarrow"></a>
        
    <% }); %>

</main>




