<%- include('./Partials/head') %>

<main class="main-product">


<!-- <section class="producten-section"></section> -->
    <% producten.producten.forEach(product => { %>


    <div class="kader-producten">
    
        <picture>
            <source media="(min-width: 1024px)" type="image/webp" srcset=" <%= product.plaatjes.smallAsWebP %> <%= product.plaatjes.originalAsWebP %>  <%= product.plaatjes.width %> ">
            <img class="pindaproducten" src=" <%= product.plaatjes[0].url %>"  alt="pindaofeiproducten">
        </picture>
       
        <h2 class="titelproducten">
            <%= product.titel%>
        </h2>
        
        
        <div class="prijs-button">
            <p class="prijs-product">
                <span>&euro;</span>  <%= product.prijs%>
            </p>

            <a class="button-producten" href="product?id=<%=product.id%>"><img src="/chevron-right.svg" alt="iconarrow"></a>
        </div>
    </div>
      
    <% }); %>
<!-- </section> -->

</main>




<%- include('./Partials/foot') %>